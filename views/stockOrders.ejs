<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Stock Orders | F1 Coffee Roasters IMS</title>
    <link rel="stylesheet" href="/stylesheets/styles.css" type="text/css" />
    <script>
        // confirmation alert for restock
        function confirmRestock() {
            if (confirm("Are you sure you want to restock this product?")) {
                document.getElementById('productID').value = productID;
                document.getElementById("restock").submit();
            }
        }
    </script>
</head>

<body>
    <div id="backdrop"></div>
    <header>
        <nav id="navbar">
            <div class="mainMenu">
                <div class="nonDrop">
                    <div>
                        <a href="/"><button id="buttonDrop">Products</button></a>
                    </div>
                </div>
                <div class="nonDrop">
                    <button class="defaultBtn" onclick="window.location.href='/clientOrders'">Client Orders</button>
                </div>
                <div class="nonDrop">
                    <button class="defaultBtn" onclick="window.location.href='/stockOrders'">Stock Orders</button>
                </div>
                <div class="nonDrop">
                </div>

                <div id="logout">
                    <button class="logout" onclick="window.location.href='admin_login.html'">Logout</button>
                </div>
        </nav>
        <div class="banner">
            <!--coffee bag by supalerk laipawat from Noun Project (CC BY 3.0)-->
            <a href="https://thenounproject.combr/owse/icons/term/coffee-bag/"><img src="logoF1CR.png" class="logo"></a>
            <span>F1 Coffee Roasters IMS</span>
        </div>
    </header>
    <br>
    <br>
    <main>
        <h3 id="page">F1 Coffee Roasters IMS - Stock Orders
            <a href="\"><button class="logout" style="float:right;margin-right: 20px;">Cancel</button></a>
        </h3>
        <br />
        <div class="mainTable">
            <table class="table">
                <br />
                <br />
                <thead>
                    <tr>
                        <th>Stock Order ID</th>
                        <th>Product ID</th>
                        <th>Quantity</th>
                        <th>Date</th>
                        <th style="text-align: center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% stockOrders.forEach(element=> { %>
                        <tr>
                            <form action="/stockOrders/" method="POST" onsubmit="return confirmRestock()" id="restock">
                                <td>
                                    <%= element.stockorderID %>
                                </td>
                                <td>
                                    <%= element.productID %>
                                    <input type="hidden" name="productID" value="<%= element.productID %>">
                                </td>
                                <td>
                                    <%= element.sorderquantity %>
                                </td>
                                <td>
                                    <%= element.date %>
                                </td>
                                <td>
                                    <input type="submit" name="submit" class="logout" value="Restock" style="float:right;margin-right: 20px;">
                                </td>
                            </form>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>
</body>

</html>