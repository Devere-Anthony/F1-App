<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Products | F1 Coffee Roasters IMS</title>
    <link rel="stylesheet" href="/stylesheets/styles.css" type="text/css" />
    <script>
        function addProduct() {
            if (confirm("Are you sure you want to add this product?"))
            {
               return window.location.href = '/';
            }
        }
    </script>
</head>

<body>
    <div id="backdrop"></div>
    <header>
        <nav id="navbar">
            <div class="mainMenu">
                <div class= "nonDrop">
                    <div>
                        <a href="\"><button id="buttonDrop">Products</button></a>
                    </div>
                </div>
                <div class="nonDrop">
                    <button class="defaultBtn" onclick="window.location.href='/clientOrders'">Client Orders</button>
                </div>
                <div class="nonDrop">
                    <button class="defaultBtn" onclick="window.location.href='/stockOrders'">Stock Orders</button>
                </div>
                <div class="nonDrop">
                    <div class="nonDrop">
                        <button class="defaultBtn" onclick="window.location.href='/farms'">Farms</button>
                    </div>
                </div>

                <div id="logout">
                    <button class="logout" onclick="window.location.href='/login'">Logout</button>
                </div>
        </nav>
        <div class="banner">
            <!--coffee bag by supalerk laipawat from Noun Project (CC BY 3.0)-->
            <a href="https://thenounproject.combr/owse/icons/term/coffee-bag/"><img src="logoF1CR.png" class="logo"></a>
            <span>F1 Coffee Roasters IMS</span>
        </div>
    </header>
    <br>
    <br>
    <main>
        <h3 id="page">F1 Coffee Roasters IMS - Add Product
            <a href="\"><button class="logout" style="float:right;margin-right: 20px;">Cancel</button></a>
        </h3>
        <br />
        <div class=" mainTable">
            <table class="table">
                <br />
                <br />
                <form action="/addProduct" method="POST" onsubmit="return addProduct()">
                    <fieldset>
                        <legend>Product Specifications</legend>
                        <br />
                        <br />
                        <br />
                        <div> <label for="productName">Product Name:</label>
                            <input type="text" name="productName" required id="productName"
                                placeholder="Ethiopian Natural" />
                        </div>
                        <br />
                        <br />
                        <div><label>Barcode:</label>
                            <input type="text" name="barcode" id="barcode" required placeholder="8095632" />
                        </div>
                        <br />
                        <br />
                        <div>
                            <label for="category">Roast Category:</label>
                            <select id="category" name="category">
                                <option value="Light Roast">Light Roast</option>
                                <option value="Medium Roast">Medium Roast</option>
                                <option value="Dark Roast">Dark Roast</option>
                            </select>
                        </div>
                        <br />
                        <br />
                        <div>
                            <label for="retail">Retail Price:</label>
                            <input type="text" name="retail" required id="retail" placeholder="12.00" />
                        </div>
                        <br />
                        <br />
                        <div>
                            <label for="wholesale">Wholesale Price:</label>
                            <input type="text" name="wholesale" required id="wholesale"
                                placeholder="10.00" />
                        </div>
                        <br />
                        <br />
                        <div>
                            <label for="quantity">Quantity:</label>
                            <input type="number" name="quantity" required id="quantity" placeholder="0" />
                        </div>
                        <br />
                        <br />
                        <div>
                            <label for="autorestock">Enable auto restock:</label>
                            <input type="checkbox" id="autorestock" name="autorestock" value="enabled" checked />
                        </div>
                        <br />
                        <br />
                        <div>
                            <label for="maxstock">Maximum Threshold:</label>
                            <input type="range" name="maxstock" value="100" min="1" max="100" oninput="this.nextElementSibling.value = this.value">
                            <output>100</output>
                        </div>
                        <br />
                        <br />
                        <div>
                            <label for="minstock">Minimum Threshold:</label>
                            <input type="range" name="minstock" value="0" min="0" max="100" oninput="this.nextElementSibling.value = this.value">
                            <output>0</output>
                        </div>
                        <br />
                        <br />
                        <div>
                            <input type="submit" name="submit" class="logout" value="Add Product"
                                style="float:right;margin-right: 20px;"></button>
                        </div>
                    </fieldset>
                </form>
        </div>
    </main>
</body>

</html>